<header class="page-header grid-center">
	{% if title %}
		<h2 class="page-title">{{ title }}</h2>
	{% else %}
		<h2 class="page-title">{{ strain }}</h2>
		<h3 class="price-level">{{ priceLevel }}</h3>
	{% endif %}
	{% if desc %}
		<p class="desc">{{ desc | safe }}</p>
	{% endif %}
	{% if tip %}
		<p class="tip">{{ tip | safe }}</p>
	{% endif %}
	{% if content %}
		<p class="strain-desc">{{ content | safe }}</p>
	{% endif %}
	<div class="overlay"></div>
</header>
