---
layout: layouts/page.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---

<h1 style="color: var(--font-color-dark); padding-bottom: 2rem;" class="center">{{ tag }}</h1>

<ul class="coa-list">
{% set taglist = collections[ tag ] %}
{% for post in taglist | sort(false, false, 'data.strain') %}
	<li style="text-transform: uppercase;">
		<a href="{{ post.url }}">{% if post.data.title %}{{ post.data.title | upper }} {% else %} {{ post.data.strain | upper }}{% endif %}</a>
	</li>
{% endfor %}
</ul>
